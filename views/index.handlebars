<h1>AYCE Burgers</h1>

<p>Manage Burgers with this app</p>
<!-- this is index.handlebars -->
<ul>
  {{#each burgers}}
  	<li>
  		<p><span class="label">ID:</span> {{this.id}}</p>
      <p><span class="label">Burger:</span> {{this.burger_name}}</p>

      {{!-- Form should send a delete command to the server --}}
      <form action="/delete?_method=DELETE" method="POST">
        <input type="hidden" name="id" value="{{this.id}}">
        <button type="submit">Delete</button>
      </form>

      <a href="/burgers/{{this.id}}">Update this burger</a>
  	</li>
  {{/each}}
</ul>

<h2>Add a Burger</h2>

{{!-- Form should send a post command to the server --}}

<form action="/create" method="POST" class="create-form">

  <div class="form-group">
    <label for="auth">Burger:</label>
    <input type="text" id="auth" name="author">
  </div>


  <button type="submit">Add Burger</button>
</form>
